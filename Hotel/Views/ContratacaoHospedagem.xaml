<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}"
             >
    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10">
        <Label 
            Text="Cálculo da Diária"
            TextColor="{StaticResource Primary}"
            FontFamily="AlegreyaSans-Light"
            FontSize="50"
            HorizontalOptions="Center"/>
        <Frame Padding="10">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*" RowSpacing="5">
                    <Label Grid.Row="0" Grid.Column="0" Text="Adultos"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>
                    <Stepper Grid.Row="0" Grid.Column="2" x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Crianças"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"/>
                    <Stepper Grid.Row="1" Grid.Column="2" x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"/>
                </Grid>
                <Label Text="Escolha sua Suíte"/>
                <Picker x:Name="pck_quarto"
                        Title="Selecione sua Acomodação"/>
                <Frame Padding="10" Margin="10">
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia"/>
                        <HorizontalStackLayout>
                            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, *" ColumnSpacing="10" RowSpacing="5">
                                <Label Text="Check-in: "/>
                                <DatePicker x:Name="dtpck_checkin" Grid.Column="1"
                                            Format="dd/MM/yyyy"/>

                                <Label Text="Check-out: " Grid.Row="1"/>
                                <DatePicker x:Name="dtpck_checkout" Grid.Column="1" Grid.Row="1"
                                            Format="dd/MM/yyyy"/>
                            </Grid>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>
                <Button Text="Avançar" BackgroundColor="{StaticResource Primary}" TextColor="White"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>